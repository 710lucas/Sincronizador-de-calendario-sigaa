<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'

        MDLabel:
            text: 'Sincronizador de agenda do SIGAA'
            id: "texto"
            font_size: "48sp"
            text_align: 'center'
            valign: 'center'
            halign: 'center'
        
        MDLabel:
            markup: True
            text: "Informe seu usuario e senha do SIGAA\nSaiba mais sobre a politica de privacidade em:\n [color=#4040cc][ref=link]politica[/ref][/color]"
            text_align: 'center'
            valign: 'center'
            halign: 'center'
            on_ref_press: root.open_browser()

        BoxLayout:
            orientation: 'vertical'

            MDLabel:
                text: 'Login'
                font_size: "32dp"
                text_align: 'center'
                valign: 'center'
                halign: 'center'
                # halign: 'left'
                # text_size: root.width-20, 20

            MDTextFieldRect:
                id: login
                multiline:False
                font_size: "12sp"
                size_hint: 0.5, 0.2
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            orientation: 'vertical'
            spacing: 0
            MDLabel:
                text: 'Senha'
                text_align: 'center'
                valign: 'center'
                halign: 'center'
                # halign: 'left'
                font_size: "32dp"
                # text_size: root.width-20, 20

            MDTextFieldRect:
                id: password
                multiline:False
                password:True
                font_size: "12sp"
                size_hint: 0.5, 0.2
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            orientation: 'vertical'
            MDRaisedButton:
                text: 'Login'
                font_size: "24sp"

                padding: 50, 25, 50, 25
                
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                on_press: root.do_login(login.text, password.text)
        BoxLayout: